<div class="user-main container my-5">

<div class="card">
<h2 class="mt-4">アカウントの編集</h2>
<div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="field my-4">
    <label for="user_email">メールアドレス</label>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <% @user.errors.where(:email).each do |error| %>
      <p class="error-text"><%= error.full_message %></p>
    <% end %>
  </div>

  <div class="field my-4">
    <div class="edit-label-area">
      <label for="user_password" >パスワード</label>
      <label for="user_password" class="edit-password ml-3">※変更する場合のみ</label>
    </div>
    <%= f.text_field :password, type: "password", autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field my-4">
    <div class="edit-label-area">
      <label for="user_password_confirmation" >確認用パスワード</label>
      <label for="user_password_confirmation" class="edit-password ml-3">※変更する場合のみ</label>
    </div>
    <%= f.text_field :password_confirmation, type: "password", autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field my-4">
    <div class="edit-label-area">
      <label for="user_current_password" >現在のパスワード</label>
      <label for="user_current_password" class="edit-password  edit-password-esse ml-3">※必ず入力してください</label>
    </div>
    <%= f.text_field :current_password, type: "password", autocomplete: "current-password", class: "form-control" %>
    <% @user.errors.where(:current_password).each do |error| %>
      <p class="error-text"><%= error.full_message %></p>
    <% end %>
  </div>

  <div class="actions my-4">
    <%= f.submit "保存する", class:"form-control btn-info mb-3" %>
    <%= link_to "戻る", users_account_path(current_user.id), class: "form-control btn-outline-info text-center" %>
  </div>
<% end %>

</div>
</div>
</div>
